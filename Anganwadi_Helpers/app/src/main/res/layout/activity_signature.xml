<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.panavtec.drawableview.DrawableView
        android:id="@+id/signatureDrawableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/undoStroke"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_undo_black_24dp"
            android:tint="@color/white"
            android:layout_marginRight="16dp"
            app:elevation="6dp"
            app:backgroundTint="#51ad86"    />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/clearCanvas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            app:elevation="6dp"
            app:backgroundTint="#51ad86"  />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signatureDoneBtn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_check_white_24px"
        android:tint="@color/white"
        app:elevation="6dp"
        app:backgroundTint="#8edb66"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"/>

</FrameLayout>