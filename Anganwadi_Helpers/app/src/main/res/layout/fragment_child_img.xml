<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".child_img">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
      app:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Your Recent Picture"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/title"
                android:gravity="center"
                android:textColor="#fa0c24"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/photo"
                    android:tag="upload"
                    android:src="@drawable/upload"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECT A PIC "
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:textColor="#ed0a34"
                    android:textSize="20dp"
                    android:id="@+id/select"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SMILE PLEASE"
                    android:textStyle="bold"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:id="@+id/smile"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="120dp"
                    android:visibility="gone"
                    android:id="@+id/check"
                    android:src="@drawable/ic_check_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Image Uploaded Successfully Click on \t Next"
                    android:id="@+id/text_show"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="150dp"
                    android:textColor="#da06cc"
                    android:layout_marginTop="150dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </RelativeLayout>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Upload"
                android:layout_marginTop="40dp"
                android:id="@+id/upload_button"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
               />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>