<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.panavtec.drawableview.DrawableView
        android:id="@+id/signatureDrawableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signatureDoneBtn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_check_white_24px"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="@color/holo_green_light"
        android:layout_marginBottom="20dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/undoStroke"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_check_white_24px" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/clearCanvas"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:layout_margin="20dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_check_white_24px" />

</FrameLayout>