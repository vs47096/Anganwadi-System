<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List_of_doctor"
    android:orientation="vertical"
    android:background="@drawable/gradient_backgroundimage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_Medical_Records"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/white_boundary_black_bck"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="@dimen/headingSize" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reecycle" />

</LinearLayout>