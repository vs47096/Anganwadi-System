<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:id="@+id/img_child"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID of Child:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ID of Child:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name of Child:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ID of Child:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img"
            android:src="@drawable/ic_arrow_drop_up_black_24dp"
            android:layout_marginLeft="300dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/l1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Child's Father Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Child's Father Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/father"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"

            android:id="@+id/l2">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Child's Mother Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Child's Father Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/mother"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l3"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Child's DOB:"
                android:textColor="#000000"

                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Child's Father Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/dob"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/l4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Child's Weight:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Child's Father Name:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/weight"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>